{
    "compilerOptions": {
      "target": "es5",              // Target ECMAScript 5
      "module": "commonjs",         // Use CommonJS module system
      "strict": true,               // Enable all strict type-checking options
      "esModuleInterop": true        // Enable interoperability between CommonJS and ES Modules
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],  // Include TypeScript and declaration files in the specified paths
    "exclude": ["node_modules"]                     // Exclude the 'node_modules' directory from TypeScript compilation
  }
  